<!DOCTYPE html>
<html>
  <head>
    <% if (title) { %>
      <title><%= title %></title>
    <% } else { %>
      <title>Kara Cosmetics</title>
    <% } %>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
    <script src="/bundle.js"></script>
  </head>
  <body>
    <div id="content"><h1>HELLO WORLD</h1></div>
    <script>
    window.extAsyncInit = function() {
        // the Messenger Extensions JS SDK is done loading
		doc.getElementById('content').getElementsByTagName('h1')[0].innerHTML = "init";
        MessengerExtensions.getUserID(function success(uids) {
			doc.getElementById('content').getElementsByTagName('h1')[0].innerHTML = uids.psid;
			window.attachApp(uids.psid);
        }, function error(err) {
			window.attachApp();
			doc.getElementById('content').getElementsByTagName('h1')[0].innerHTML = "ERROR";
        });
    };
    (function(doc, script, domId){
        var js, fjs = doc.getElementsByTagName(script)[0];
        if (doc.getElementById(domId)) { return; }
        js = doc.createElement(script);
        js.id = domId;
        js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));
    </script>
  </body>
</html>